# [GENERAL]
auto-reload yes
browser "open"

# [KEYBINDS]
# Make Newsboat Vi like
bind-key l open
bind-key h quit
bind-key j down
bind-key k up
bind-key U show-urls
macro , open-in-browser
macro v set browser "mpv -fs %u" ; open-in-browser ; set browser "open"

# [FILTERING]
# Don't display articles that mach with the ignore article regexs
ignore-mode "display"
ignore-article "https://sachachua.com/blog/feed/" "title !# \"news\""
ignore-article "https://www.reddit.com/r/emacs/.rss" "(author == \"/u/rakashraj\" or title # \"ivy\")"

# [COLORS]
color info black black invis
color listnormal_unread white black bold
highlight article "(^Feed:.*|^Title:.*|^Author:.*|^Link:.*|^Date:.*)" cyan default bold
highlight article "\\[image\\ [0-100]+\\]" magenta default bold
highlight article ":.*\\(link\\)$" green default
highlight article ":.*\\(image\\)$" magenta default
