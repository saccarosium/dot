#!/usr/bin/env bash

_exist() {
    if type "$1" &>/dev/null; then
        printf "\e[35m==>\e[0m updating %s...\n" "$1"
    else
        printf "\e[31m==> %s doesn't appear in the PATH\e[0m \n" "$1" >&2
    fi
}

# mac os
if [[ "$OSTYPE" == "darwin"* ]]; then
    if _exist softwareupdate; then
        softwareupdate --all --install --force
    fi
    if _exist brew; then
        brew update
        brew upgrade --greedy
        brew autoremove
        brew cleanup
    fi
fi

if _exist tlmgr; then
    sudo tlmgr update --self
    sudo tlmgr update --all
fi

if _exist nix-channel; then
    nix-channel --update
fi

if _exist home-manager; then
    home-manager switch
fi

if _exist nvim; then
    nvim +PlugUpdate +PlugUpgrade +qall
fi

if [[ -n "$DOTFILES" ]]; then
    cd "$DOTFILES" || exit 1
    git add ./*
    git commit -m "general: automatic update"
    git push origin
fi
