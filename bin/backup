#!/usr/bin/env bash

HDD=$(find /Volumes -maxdepth 1 | fzf)
checking=1
dirs=("$HOME/.ssh" "$DOTFILES" "$XDG_DOCUMENTS_DIR" "$PROJECTS")
rsync='rsync -hurvbz'

help() {
    echo "Usage: hdd-backup [ -C ]"
}

check() {
    [[ "$checking" -eq '0' ]] && return 0
    for i in "${dirs[@]}"; do 
        local target
        target="$HDD/$(basename "$i")" 
        [[ -e "$HDD" ]] || exit 2
        $rsync -n "$i" "$target" | less
    done
    printf "Do you wanna go over? [y|n] "
    read -r answer
    case "$answer" in
         [yY])
             return 0
             ;;
         [nN])
             return 1
             ;;
    esac
}

backup() {
    for i in "${dirs[@]}"; do 
        local target
        target="$HDD/$(basename "$i")" 
        [[ -e "$HDD" ]] || exit 1
        $rsync -P "$i" "$target"
    done
}
 
if [[ "$#" -gt 0 ]]; then
    while getopts 'Ch' option
    do
        case "$option" in
            C) checking=0;;
            h) help && exit 0;;
            *) help && exit 1;;
        esac
    done
fi

check && backup

exit 0
