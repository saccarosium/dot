#!/usr/bin/env bash

HDD=$(echo "$@" | sed "s/\-C//; s/ //")
checking=1
dirs=("$HOME/.ssh" "$DOTFILES" "$XDG_DOCUMENTS_DIR" "$PROJECTS")
rsync='rsync -hurvaz --delete'

while getopts "C" options; do
    case "$options" in
    C)
        checking=0
        ;;
    *)
        ;;
    esac
done


check() {
    for i in "${dirs[@]}"; do
        local target
        target="$HDD/$(basename "$i")"
        [[ -e "$HDD" ]] || exit 2
        $rsync -n "$i" "$target" | less
    done
    printf "Do you wanna go over? [y|n] "
    read -r answer
    case "$answer" in
    [yY])
        return 0
        ;;
    [nN])
        return 1
        ;;
    esac
}

backup() {
    for i in "${dirs[@]}"; do
        local target
        target="$HDD/$(basename "$i")"
        [[ -e "$HDD" ]] || exit 1
        echo "[$(date +\"%Y-%m-%d\")] backing up: $target"
        $rsync -P "$i" "$target"
    done
}

if [[ "$checking" -eq 0 ]]; then
    backup
else
    check && backup
fi

exit 0
